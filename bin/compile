set -e pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3  # Deis doent send this

PY_VERSION='3.5.1'
PY_NAME="Python-"$PY_VERSION
PY_TGZ=$PY_NAME".tgz"
PY_PATH=$BUILD_DIR"/.python"
BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
WORK_DIR=`pwd`
export PATH=$PY_PATH/bin:$PATH
export PYTHONUNBUFFERED=1
export LANG=en_US.UTF-8

echo "Dependencies and compiler"

echo "==========================================================================="
echo "which python"
cd $CACHE_DIR
# if [[ ! -f $PY_TGZ ]]; then
	curl -O https://www.python.org/ftp/python/$PY_VERSION/$PY_TGZ
	tar -xzvf $PY_TGZ
	cd $PY_NAME
	# mkdir -p $PY_PATH
	./configure  # --prefix=$PY_PATH
	make
	make install
# fi
which python
which pip
python --version
python3 --version
echo "==========================================================================="
