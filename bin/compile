export BUILD_DIR=$1
export CACHE_DIR=$2
export WORK_DIR=`pwd`
export PY_VERSION='3.5.1'
export PY_NAME="Python-"$PY_VERSION
export PY_TGZ=$PY_NAME".tgz"
echo "Dependencies and compiler"

echo "==========================================================================="
echo "which python"
cd $CACHE_DIR
pwd
curl -O https://www.python.org/ftp/python/$PY_VERSION/$PY_TGZ
tar -xzvf $PY_TGZ
cd $PY_NAME
./configure
make
make install
which python
which pip
python --version
python3 --version
echo "==========================================================================="
